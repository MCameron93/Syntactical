<Window
    x:Class="Syntactical.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Syntactical"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:progresspanel="clr-namespace:Syntactical.ProgressPanel"
    Title="Dog"
    Width="800"
    Height="500"
    d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Fft: " />
                <Label Content="{Binding FftDisplay}" />
            </StackPanel>
            <Button Command="{Binding PlayCommand}" Content="Play" />
        </StackPanel>

        <local:SpectrumAnalyser x:Name="SpectrumAnalyser" Grid.Row="1" />

    </Grid>
</Window>
