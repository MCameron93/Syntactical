<UserControl
    x:Class="Syntactical.ProgressPanel.ProgressPanelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Syntactical.ProgressPanel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ProgressPanelViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Orange"
    mc:Ignorable="d">
    <Grid>
        <ListView ItemsSource="{Binding ProgressBars}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Width="30"
                            Height="20"
                            VerticalContentAlignment="Center"
                            Content="{Binding Label}"
                            FontSize="10" />
                        <ProgressBar
                            Width="200"
                            Height="10"
                            HorizontalAlignment="Stretch"
                            Value="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
